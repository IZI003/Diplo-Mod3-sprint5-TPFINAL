    <div class="form-container">
        <h1>Actualizar Superhéroe: <%= info.nombreSuperHeroe %></h1>
        <form action="/heroes/actualizar/<%=info.id%>?_method=PUT" method="POST">
            <fieldset>
                <legend>Información Básica</legend>
                <div class="form-group">
                    <label for="nombreSuperHeroe">Nombre del superhéroe:</label>
                    <input type="text" id="nombreSuperHeroe" name="nombreSuperHeroe" value="<%= info.nombreSuperHeroe %>" required minlength="3" maxlength="60">
                </div>
                <div class="form-group">
                    <label for="nombreReal">Nombre real del superhéroe:</label>
                    <input type="text" id="nombreReal" name="nombreReal" value="<%= info.nombreReal %>" required minlength="3" maxlength="60">
                </div>
                <div class="form-group">
                    <label for="edad">Edad:</label>
                    <input type="number" id="edad" name="edad" value="<%= info.edad %>" required min="0" step="1">
                </div>
                <div class="form-group">
                    <label for="planetaOrigen">Planeta de origen:</label>
                    <input type="text" id="planetaOrigen" name="planetaOrigen" value="<%= info.planetaOrigen || '' %>">
                </div>
                <div class="form-group">
                    <label for="debilidad">Debilidad:</label>
                    <input type="text" id="debilidad" name="debilidad" value="<%= info.debilidad || '' %>">
                </div>
                <div class="form-group">
                    <label for="creador">Creador:</label>
                    <input type="text" id="creador" name="creador" value="<%= info.creador || '' %>">
                </div>
            </fieldset>

            <fieldset>
                <legend>Habilidades y Relaciones</legend>
                <div class="form-group">
                    <label for="poderes">Poderes (separados por comas):</label>
                    <input type="text" id="poderes" name="poderes" pattern="^(\s*\w.{2,58}\s*)(\s*,\s*\w.{2,58}\s*)*$" value="<%= info.poderes ? info.poderes.join(', ') : '' %>" required>
                </div>
                <div class="form-group">
                    <label for="aliados">Aliados (separados por comas):</label>
                    <input type="text" id="aliados" name="aliados" value="<%= info.aliados ? info.aliados.join(', ') : '' %>">
                </div>
                <div class="form-group">
                    <label for="enemigos">Enemigos (separados por comas):</label>
                    <input type="text" id="enemigos" name="enemigos" value="<%= info.enemigos ? info.enemigos.join(', ') : '' %>">
                </div>
            </fieldset>

            <div class="form-actions">
                <a href="#" class="btn btn-primary" onclick="document.querySelector('form').submit()">Actualizar Superhéroe</a>
                <a href="/dashboard" class="btn btn-danger">Cancelar</a>
            </div>
        </form>
    </div>