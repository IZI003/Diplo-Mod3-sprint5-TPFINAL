    <div class="container">
        <h1>Lista de Superhéroes</h1>
        <% if (superheroes && superheroes.length > 0) { %>
            <div class="heroes-grid">
                <% superheroes.forEach((superheroe) => { %>
                    <div class="hero-card">
                        <h2><%= superheroe.nombreSuperHeroe %></h2>
                        <ul>
                            <li><strong>Nombre Real:</strong> <%= superheroe.nombreReal %></li>
                            <li><strong>Edad:</strong> <%= superheroe.edad %></li>
                            <li><strong>Planeta de Origen:</strong> <%= superheroe.planetaOrigen || 'N/A' %></li>
                            <li><strong>Debilidad:</strong> <%= superheroe.debilidad || 'N/A' %></li>
                            <li><strong>Poderes:</strong> <%= superheroe.poderes && superheroe.poderes.length > 0 ? superheroe.poderes.join(', ') : 'N/A' %></li>
                            <li><strong>Aliados:</strong> <%= superheroe.aliados && superheroe.aliados.length > 0 ? superheroe.aliados.join(', ') : 'N/A' %></li>
                            <li><strong>Enemigos:</strong> <%= superheroe.enemigos && superheroe.enemigos.length > 0 ? superheroe.enemigos.join(', ') : 'N/A' %></li>
                            <li><strong>Creador:</strong> <%= superheroe.creador || 'N/A' %></li>
                        </ul>
                        <div class="hero-actions">
                            <a href="http://localhost:3000/api/formEditarHero/<%= superheroe.id %>" class="btn btn-primary">Actualizar</a>
                            <a href="http://localhost:3000/api/confirmarEliminar/<%= superheroe.id %>" class="btn btn-danger">Eliminar</a>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p class="message">No hay superhéroes registrados aún.</p>
        <% } %>
    </div>